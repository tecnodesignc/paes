{
    "name": "tecnodesignc/notification-module",
    "description": "Module handling the real time notifications",
    "type": "encore-module",
    "keywords": [
        "encorecms",
        "notifications",
        "pusher"
    ],
    "authors": [
        {
            "name": "Marcos Rativa",
            "email": "info@tecnodesign.com.co",
            "role": "Developer"
        }
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "composer/installers": "^2.1",
        "tecnodesignc/core-module": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "orchestra/testbench": "3.8.*",
        "mockery/mockery": "^1.4.4",
        "friendsofphp/php-cs-fixer": "^2.12"
    },
    "autoload": {
        "psr-4": {
            "Modules\\Notification\\": "",
            "Modules\\": "modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Modules\\Notification\\": ".",
            "Modules\\": "modules/"
        }
    },
    "support": {
        "email": "support@tecnodesign.com.co",
        "issues": "https://github.com/tecnodesignc/encorecms/issues",
        "source": "https://github.com/tecnodesignc/notification-module"
    },
    "extra": {
        "branch-alias": {
            "dev-2.0": "2.0.x-dev"
        }
    },
    "suggest": {
        "pusher/pusher-php-server": "Allows notifications to enable real-time notifications."
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
